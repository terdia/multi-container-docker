{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "terdia07/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "terdia07/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "terdia07/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "ngnix",
            "image": "terdia07/multi-nginx",
            "hostname": "ngnix",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }

            ],
            "links": ["client", "server"]
        }
    ]
}